<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextCelsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập nhiệt độ (Celsius)"
        android:inputType="numberDecimal" />

    <!-- Ô nhập nhiệt độ Kelvin -->
    <EditText
        android:id="@+id/editTextKelvin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập nhiệt độ (Kelvin)"
        android:inputType="numberDecimal" />

    <!-- Nút chuyển đổi từ C sang K -->
    <Button
        android:id="@+id/buttonCtoK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển từ C sang K" />

    <!-- Nút chuyển đổi từ K sang C -->
    <Button
        android:id="@+id/buttonKtoC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển từ K sang C" />

    <!-- Nút xóa dữ liệu -->
    <Button
        android:id="@+id/buttonClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa dữ liệu" />

</LinearLayout>